<div class="container mt-3">
  <h1>My movies lists</h1>
  <ul class="list-group w-25">
    <% @lists.each do |list| %>
      <li class="list-group-item"><%= link_to list.name, show_path(list), class: "text-decoration-none" %></li>
    <% end %>
  </ul>
  <%= link_to "Add new list", new_path(@new), class: "btn btn-success mt-3" %>
</div>
