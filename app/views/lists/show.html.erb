<div class="container mt-3">
  <h1><%= @list.name %></h1>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_tag @list.photo.key, height: 300, crop: :fill %>')">
    <%= @list.name %>
  </div>
  <div class="container mt-3 d-flex">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card m-4" style="width: 18rem;">
        <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>'s poster">
        <div class="card-body">
          <h5 class="card-title"><strong><%= bookmark.movie.title %></strong></h5>
          <p class="card-text"><em><%= bookmark.movie.overview %></em></p>
          <p class="card-text">------------</p>
          <p class="card-text"><%= bookmark.comment %></p>
          <p class="card-text"><strong>Rating:</strong> <%= bookmark.movie.rating %></p>
          <%= link_to "Delete", [@list, bookmark], data: {turbo_method: :delete, turbo_confirm: "Are you sure?!"}, class: "btn btn-danger mt-3" %>
        </div>
      </div>
    <% end %>
   </div>
    <div class="container mt-3 d-flex">
      <%= link_to "Add new movie", new_list_bookmark_path(@list), class: "btn btn-success m-3" %>
      <%= link_to "Back to lists", lists_path(@list), class: "btn btn-success m-3" %>
    </div>
</div>
